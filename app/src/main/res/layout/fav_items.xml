<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favItems"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/layout_Fav_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDelFav"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center|right|top"
            app:srcCompat="@drawable/ic_baseline_minimize_24" />

        <ImageView
            android:id="@+id/imgFav"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/contact_image"
            app:srcCompat="@drawable/pic_2" />

        <TextView
            android:id="@+id/tvNameFav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/alegreya_bold_italic"
            android:text="@string/name"
            android:textColor="@color/Color_Dark"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.cardview.widget.CardView>